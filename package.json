{
  "name": "design-system",
  "version": "0.0.1",
  "private": true,
  "description": "Multi-brand design system with theme support",
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "dev": "pnpm --filter demo-app dev",
    "storybook": "pnpm --filter @ds/storybook dev",
    "build": "pnpm -r build",
    "build:storybook": "pnpm --filter @ds/storybook build",
    "lint": "eslint .",
    "clean": "rm -rf node_modules packages/*/node_modules apps/*/node_modules",
    "docker:up": "docker compose --env-file .env.docker up",
    "docker:up:demo": "docker compose --env-file .env.docker up demo-app",
    "docker:up:storybook": "docker compose --env-file .env.docker up storybook",
    "docker:build": "docker compose --env-file .env.docker build",
    "docker:down": "docker compose down"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  }
}
